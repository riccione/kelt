<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/login_dest">

    <fragment
        android:id="@+id/login_dest"
        android:name="com.ignes.kelt.view.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_dest_to_home_dest"
            app:destination="@id/home_dest" />
    </fragment>

    <fragment
        android:id="@+id/home_dest"
        android:name="com.ignes.kelt.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/settings_dest"
        android:name="com.ignes.kelt.view.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@xml/settings" >
        <action
            android:id="@+id/action_settings_dest_to_login_dest"
            app:destination="@id/login_dest" />
        <action
            android:id="@+id/action_settings_dest_to_home_dest"
            app:destination="@id/home_dest" />
    </fragment>
</navigation>